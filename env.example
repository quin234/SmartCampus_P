# SmartCampus Production Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-django-admin-shell
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,192.168.100.23

# Database Configuration
DB_NAME=smartcampus
DB_USER=smartcampus_user
DB_PASSWORD=StrongRootPassword!
DB_HOST=localhost
DB_PORT=3306

# Static and Media Files
STATIC_ROOT=/var/www/smartcampus/staticfiles
MEDIA_ROOT=/var/www/smartcampus/media

# Base URL (for M-Pesa callbacks and other services)
BASE_URL=https://yourdomain.com

# Redis Configuration (for caching)
REDIS_URL=redis://127.0.0.1:6379/1

# SSL Settings
SECURE_SSL_REDIRECT=True

# Logging
LOG_FILE=/var/log/smartcampus/django.log

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# M-Pesa Daraja API Credentials (if applicable)
# MPESA_CONSUMER_KEY=your-consumer-key
# MPESA_CONSUMER_SECRET=your-consumer-secret
# MPESA_SHORTCODE=your-shortcode
# MPESA_PASSKEY=your-passkey

